{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "target": "es2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "module": "commonjs",
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "dist",
    "__tests__",
    "coverage",
    "scripts",
    "jest.config.ts",
    "playground.ts"
  ]
}
